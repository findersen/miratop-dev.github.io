include ../utils/mixins
block variables

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title #{title}
    meta(name="description", content=description)
    block head

  body(class=pageClass)
    case witchPage
      when 'main'
        include ../includes/modules/main-page-banner
      default
        include ../includes/modules/header
    block content
    include ../includes/modules/footer